<odoo>

    <record
        id="crm_sale_automatic_quotation_wizard_form_asynchronous"
        model="ir.ui.view"
    >
        <field name="name">Create automatic quotations asynchronously</field>
        <field name="model">crm.sale.automatic.quotation.wizard</field>
        <field
            name="inherit_id"
            ref="crm_sale_automatic_quotation.crm_sale_automatic_quotation_wizard_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//group[@id='ok_msg']/p" position="after">
                <p
                    attrs="{'invisible': [('send_mail', '==', False)]}"
                >Your outgoing mails have been scheduled, them will be sent in some seconds.</p>
            </xpath>
            <xpath expr="//group[@id='not_ok_msg']/p" position="after">
                <p
                    attrs="{'invisible': [('send_mail', '==', False)]}"
                >Your outgoing mails have been scheduled, them will be sent in some seconds.</p>
            </xpath>
        </field>
    </record>

</odoo>
