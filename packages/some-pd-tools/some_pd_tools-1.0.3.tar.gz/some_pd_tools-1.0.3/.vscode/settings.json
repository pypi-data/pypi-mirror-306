{
    "pylint.args": [
        // Unscriptable object
        // https://pylint.readthedocs.io/en/latest/user_guide/messages/error/unsubscriptable-object.html
        "--disable=E1136",
        // Line too long
        // https://pylint.readthedocs.io/en/latest/user_guide/messages/convention/line-too-long.html
        "--disable=C0301",
        // unnecessary-lambda
        // https://pylint.readthedocs.io/en/latest/user_guide/messages/warning/unnecessary-lambda.html
        "--disable=W0108",
        // missing-function-docstring / C0116
        // https://pylint.readthedocs.io/en/latest/user_guide/messages/convention/missing-function-docstring.html
        "--disable=W0108",
        // // too-many-lines (in module)
        // // https://pylint.readthedocs.io/en/latest/user_guide/messages/convention/too-many-lines.html
        // "--disable=C0302",
        // Function name doesn't conform to snake_case naming style
        // https://pylint.readthedocs.io/en/latest/user_guide/messages/convention/invalid-name.html
        "--disable=C0103",
        // https://pylint.readthedocs.io/en/latest/user_guide/messages/convention/missing-module-docstring.html
        "--disable=C0114",
        // https://pylint.readthedocs.io/en/latest/user_guide/messages/convention/missing-class-docstring.html
        "--disable=C0115",
        // https://pylint.readthedocs.io/en/latest/user_guide/messages/convention/missing-function-docstring.html
        "--disable=C0116",
        // https://pylint.readthedocs.io/en/latest/user_guide/messages/refactor/comparison-with-itself.html
        "--disable=R0124",
        // https://pylint.readthedocs.io/en/latest/user_guide/messages/warning/protected-access.html
        "--disable=W0212",
    ],
    // â†“ Change to "Hint" to not show spell checker in problems
    "cSpell.diagnosticLevel": "Information",
    "black-formatter.args": [
        "--skip-string-normalization",
        "--line-length=100"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "autoDocstring": {
        "docstringFormat": "numpy"
    },
    "cSpell.words": [
        "astype",
        "autofilter",
        "autofit",
        "basedf",
        "colindex",
        "deleteme",
        "docstrings",
        "downcasting",
        "dtype",
        "dtypes",
        "dups",
        "endstr",
        "eqlty",
        "fillna",
        "idxs",
        "lgnd",
        "lsuffix",
        "processings",
        "pylint",
        "pytest",
        "rewritable",
        "rsuffix",
        "someitem",
        "someitems",
        "strnan",
        "substr",
        "swaplevel",
        "thedf",
        "trunc",
        "unexisting",
        "xlsxwriter"
    ]
}