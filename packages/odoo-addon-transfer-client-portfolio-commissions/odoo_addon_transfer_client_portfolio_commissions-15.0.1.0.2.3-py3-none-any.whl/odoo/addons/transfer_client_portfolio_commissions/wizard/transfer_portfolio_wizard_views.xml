<odoo>
    <record id="transfer_client_portfolio_commissions_wizard_form" model="ir.ui.view">
        <field name="name">transfer.client.portfolio.commissions.wizard.form</field>
        <field name="model">transfer.portfolio.wizard</field>
        <field
            name="inherit_id"
            ref="transfer_client_portfolio.transfer_portfolio_wizard_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='current_salesperson']" position='after'>
                <field
                    name="transfer_agents"
                    attrs="{'invisible': [('server_action_type', '=', 'lead')]}"
                />
            </xpath>
            <xpath expr="//field[@name='new_salesperson']" position='after'>
                <field
                    name="agent_ids"
                    attrs="{'invisible': [('transfer_agents', '=', False)]}"
                    widget="many2many_tags"
                />
            </xpath>
        </field>
    </record>
</odoo>
