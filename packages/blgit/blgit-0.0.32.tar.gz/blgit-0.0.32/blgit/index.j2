{% extends "html.j2" %}
{% block footer %}
<div class="posts">
    {% for post in posts %}
    <a class="block" href="{{post.url}}">
        <div class="post">
            <div class="flex center">
                <h2>{{post.info.favicon}} {{post.info.title}}</h2>
                <div class=" author">{{post.info.author}} ï¸± {{post.info.date.strftime(date_format or '%Y-%m-%d')}}</div>
            </div>
        </div>
        <p>{{post.info.description}}</p>
    </a>
    {% endfor %}
</div>
{% endblock %}