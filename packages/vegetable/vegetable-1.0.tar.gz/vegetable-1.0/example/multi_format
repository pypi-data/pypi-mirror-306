#!/usr/bin/env python

from vegetable import Table
from vegetable.output.yaml import *
from vegetable.output.json import *
from vegetable.output.delimited import *

t = Table()
t.column("Name")
t.column("Hobby")
t.row(["'Bob'", "Just having a whale of a time."])
t.row(["Stang", "Monsterism."])
print(t, end="\n\n")
t.formatter = YamlFormat()
print(t, end="\n\n")
t.formatter = JsonFormat(indent=4)
print(t, end="\n\n")
t.formatter = DelimitedFormat(delimiter=",")
print(t, end="\n\n")
